border-1px($color)
    position relative
    &:after
        position absolute
        width 100%
        border-bottom 1px solid $color
        top 0
        left 0
        content ""
        display block 


bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio)
    background-image url($url + "@3x.png")
